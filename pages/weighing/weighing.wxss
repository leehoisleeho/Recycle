/* pages/weighing/weighing.wxss */
.info{
  margin-top: 20rpx;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  width: 720rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 10rpx;
  height: 888rpx;
  overflow-y: scroll;
}
.item_title{
  padding-left: 15rpx;
}
.item_info{
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.item_info >view:nth-child(2){
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.item_info >view:nth-child(3){
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.item_info >view{
  flex: 1;
  display: flex;
  align-items:center;
  height: 80rpx;
}
.item{
  padding: 20rpx;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}
.btnBox{
  width: 700rpx;
  margin: 80rpx auto;
}