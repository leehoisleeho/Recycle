.container{
  width: 100vw;
  height: 100vh;
  background: rgb(238, 238, 238);
  border: 1px solid rgb(238, 238, 238)
}

.header{
  background: rgb(255, 255, 255);
  width: 700rpx;
  margin: 30rpx auto;
  border-radius: 20rpx;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.userImg>image{
  width: 110rpx;
}
.nickName{
  font-weight: 600;
  margin-top: 20rpx;
  color: rgb(78, 78, 78);
}
.footer{
  position: absolute;
  bottom: 20rpx;
  width: 100%;
}

.ribbon{
  width: 700rpx;
  background: white;
  border-radius: 20rpx;
  margin: 0 auto;
  padding: 30rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.item{
  width: 175rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
.item>image{
  width: 65rpx;
}
.item > text {
  font-size: 24rpx;
  margin-top: 15rpx;
  color: rgb(85, 85, 85);
}