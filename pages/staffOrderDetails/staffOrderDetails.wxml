      <!-- <image src="/static/img/staffList.png" mode="widthFix" /> -->
      <text>订单信息</text>
    </view>
    <t-divider content="" />
    <view class="orderInfo_1">
      <view class="orderInfo_1_item">
        <text>订单状态: </text>
        <text>服务中</text>
      </view>
