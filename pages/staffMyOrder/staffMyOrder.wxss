/* pages/staffMyOrder/staffMyOrder.wxss */
.container{
  
}
.OrderInfo{
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}
.OrderInfo_item{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  font-size: 27rpx;
}
.oerderList{
  padding: 0 30rpx;
  padding-bottom: 80rpx;
}
.oerderList_item{
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 20rpx;
  padding-bottom: 10rpx;
  background: white;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  margin-bottom: 40rpx;
}
.OrderInfo_item{
  color: #666;
}
/* 待接单 */
 .state_1{
  color: #fabc08 !important;
  font-weight: 600;
}
/* 上门中 */
 .state_2{
  color:#34a853 !important;
  font-weight: 600;
}
/* 取消 */
.state_3{
  color: #f53f3f !important;
  font-weight: 600;
}
/* 完成 */
.state_4{
  color: #1e80ff !important;
  font-weight: 600;
}
.oerderList_item_1{
  margin-bottom: 20rpx;
  
}
.oerderList_item_1>text{
  font-size: 26rpx;
  color: #333;
}
.oerderList_item_1>text:nth-child(2){
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}