/* pages/myBusiness/myBusiness.wxss */
.header{
  height: 200rpx;
  background: white(56, 55, 55);
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px; */
  padding: 20rpx 0;
}
.code{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  right: 20rpx;
}
.code>image{
  width: 50rpx;
  height: 50rpx;
}
.header>image{
  width: 200rpx;
}
.info{
  width: 550rpx;
}

.item>image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
.item{
  display: flex;
  height: 200rpx;
  padding-left: 10rpx;
  align-items: center;
}
.itemBox{
  position: relative;
  padding: 20rpx 0;
  width: 700rpx;
  border-radius: 15rpx;
  margin: 20rpx auto;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info > view{
  padding: 0 10rpx;
}
.info > view > text{
  font-size: 25rpx;
  color: #666666;
}
.info > view > text:nth-child(1){
  margin-right: 10rpx;
}

.state_1{
  color: #fabc08 !important;
}
.state_2{
  color: #34a853 !important;
}
.state_3{
  color: #ea4335 !important;
}